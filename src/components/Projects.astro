      {
        personalProjects.map((project) =>
          project.urls ? (
            <div
              class="project-link project-multi-link"
              style={`--project-color: ${project.color}`}
            >
              <div class="project-header">
                <span class="project-icon">◈</span>
                <div class="project-info">
