<style>
  .project {
    padding: 6rem 2rem;
    display: flex;
    justify-content: center;
  }

  .content {
    max-width: 600px;
    width: 100%;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 600;
    color: var(--ctp-text);
    margin-bottom: 3rem;
    text-align: center;
  }

  .personal-title {
    margin-top: 4rem;
  }

  .projects {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .project-link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 1.5rem 2rem;
    background-color: var(--ctp-surface0);
    border: 2px solid var(--project-color);
    border-radius: 12px;
    text-decoration: none;
    color: var(--ctp-text);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .project-link::before {
    content: "";
    position: absolute;
    inset: -1px;
    background-color: var(--project-color);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 0;
  }

  .project-link:hover::before {
    transform: scaleX(1);
  }

  .project-header {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    flex: 1;
    z-index: 1;
  }

  .project-icon {
    font-size: 1.5rem;
    color: var(--project-color);
    transition: all 0.3s ease;
    flex-shrink: 0;
    margin-top: 0.2rem;
  }

  .project-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .project-title-row {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .project-name {
    font-size: 1.25rem;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .project-badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.75rem;
    background-color: var(--project-color);
    color: var(--ctp-base);
    border-radius: 12px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .project-description {
    font-size: 0.95rem;
    color: var(--ctp-subtext0);
    line-height: 1.4;
    transition: color 0.3s ease;
    margin: 0;
  }

  .project-multi-link {
    cursor: default;
  }

  .project-multi-link:hover {
    transform: none;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .project-coming-soon {
    cursor: default;
    opacity: 0.8;
  }

  .project-coming-soon:hover {
    transform: none;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .store-badges {
    display: flex;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .store-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background-color: var(--ctp-surface1);
    border: 2px solid var(--project-color);
    border-radius: 8px;
    color: var(--ctp-text);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
  }

  .store-badge svg {
    width: 20px;
    height: 20px;
    color: var(--project-color);
    transition: color 0.3s ease;
  }

  .store-badge:hover {
    background-color: var(--project-color);
    color: var(--ctp-base);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .store-badge:hover svg {
    color: var(--ctp-base);
  }

  .project-arrow {
    width: 24px;
    height: 24px;
    color: var(--project-color);
    transition: all 0.3s ease;
    z-index: 1;
  }

  .project-link:hover {
    transform: translateX(8px) scale(1.02);
    box-shadow:
      0 20px 25px -5px rgba(0, 0, 0, 0.2),
      0 10px 10px -5px rgba(0, 0, 0, 0.1);
  }

  .project-link:hover .project-icon,
  .project-link:hover .project-arrow {
    color: var(--ctp-base);
  }

  .project-link:hover .project-name,
  .project-link:hover .project-description {
    color: var(--ctp-base);
  }

  .project-link:hover .project-badge {
    background-color: var(--ctp-base);
    color: var(--project-color);
  }

  @media (max-width: 600px) {
    .project {
      padding: 4rem 2rem;
    }

    .section-title {
      font-size: 1.5rem;
      margin-bottom: 2rem;
    }

    .project-link {
      padding: 1.25rem 1.5rem;
    }

    .project-name {
      font-size: 1.1rem;
    }

    .store-badges {
      flex-direction: column;
      gap: 0.5rem;
    }

    .store-badge {
      width: 100%;
      justify-content: center;
    }
  }
</style>
