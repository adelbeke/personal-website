---
const posts = [
  {
    name: "How to Debug Your Network Requests on iOS Using Charles Proxy",
    url: "https://medium.com/@adelbeke/how-to-debug-your-network-requests-on-ios-using-charles-proxy-701b55adaeec",
    color: "var(--ctp-sky)",
    date: "Medium",
  },
];
---

<section class="posts">
  <div class="content">
    <h2 class="section-title">Posts</h2>
    <div class="post-list">
      {
        posts.map((post) => (
          <a
            href={post.url}
            class="post-link"
            target="_blank"
            rel="noopener noreferrer"
            style={`--post-color: ${post.color}`}
          >
            <div class="post-header">
              <span class="post-icon">â—ˆ</span>
              <div class="post-info">
                <span class="post-name">{post.name}</span>
                <span class="post-date">{post.date}</span>
              </div>
            </div>
            <svg class="post-arrow" viewBox="0 0 24 24" fill="none">
              <path
                d="M7 17L17 7M17 7H7M17 7V17"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </svg>
          </a>
        ))
      }
    </div>
  </div>
</section>

<style>
  .posts {
    padding: 6rem 2rem;
    display: flex;
    justify-content: center;
  }

  .content {
    max-width: 600px;
    width: 100%;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 600;
    color: var(--ctp-text);
    margin-bottom: 3rem;
    text-align: center;
  }

  .post-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .post-link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 1.5rem 2rem;
    background-color: var(--ctp-surface0);
    border: 2px solid var(--post-color);
    border-radius: 12px;
    text-decoration: none;
    color: var(--ctp-text);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .post-link::before {
    content: "";
    position: absolute;
    inset: -1px;
    background-color: var(--post-color);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 0;
  }

  .post-link:hover::before {
    transform: scaleX(1);
  }

  .post-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex: 1;
    z-index: 1;
  }

  .post-icon {
    font-size: 1.5rem;
    color: var(--post-color);
    transition: all 0.3s ease;
    flex-shrink: 0;
  }

  .post-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .post-name {
    font-size: 1.25rem;
    font-weight: 500;
    transition: color 0.3s ease;
    line-height: 1.4;
  }

  .post-date {
    font-size: 0.875rem;
    color: var(--ctp-subtext0);
    transition: color 0.3s ease;
  }

  .post-arrow {
    width: 24px;
    height: 24px;
    color: var(--post-color);
    transition: all 0.3s ease;
    z-index: 1;
    flex-shrink: 0;
  }

  .post-link:hover {
    transform: translateX(8px) scale(1.02);
    box-shadow:
      0 20px 25px -5px rgba(0, 0, 0, 0.2),
      0 10px 10px -5px rgba(0, 0, 0, 0.1);
  }

  .post-link:hover .post-icon,
  .post-link:hover .post-arrow {
    color: var(--ctp-base);
  }

  .post-link:hover .post-name,
  .post-link:hover .post-date {
    color: var(--ctp-base);
  }

  @media (max-width: 600px) {
    .posts {
      padding: 4rem 2rem;
    }

    .section-title {
      font-size: 1.5rem;
      margin-bottom: 2rem;
    }

    .post-link {
      padding: 1.25rem 1.5rem;
    }

    .post-name {
      font-size: 1.1rem;
    }
  }
</style>
